<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_row_poll_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/poll_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST CHOICE"
                android:textSize="25sp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentLeft="true"/>

            <View
                android:id="@+id/divider_vertical"
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:background="@color/colorBlack"
                android:layout_toRightOf="@id/poll_choice"
                android:layout_toLeftOf="@id/poll_choice_num"
                android:paddingBottom="10dp"/>


            <TextView
                android:id="@+id/poll_choice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="25dp"
                android:paddingTop="20dp"
                android:layout_toRightOf="@id/poll_choice"
                android:layout_toLeftOf="@id/poll_choice_increment"
                android:paddingRight="15dp"
                android:paddingLeft="20dp"
                />
            <TextView
                android:id="@+id/poll_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />


            <Button
                android:id="@+id/poll_choice_increment"
                android:text="+"
                android:background="@drawable/round_button"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/remove_notification"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
