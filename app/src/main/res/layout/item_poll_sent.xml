<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:id="@+id/text_poll_redirect"
    >

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:maxWidth="240dp"
        android:background="@drawable/rounded_rectangle_green"
        android:padding="8dp"
        android:layout_gravity="right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/photo_message_read"
        android:text="Read "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toTopOf="@+id/photo_message_time"
        app:layout_constraintRight_toLeftOf="@+id/photoImageView" />


    <TextView
        android:id="@+id/photo_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@id/photoImageView"
        app:layout_constraintRight_toLeftOf="@+id/photoImageView" />

    <TextView
        android:id="@+id/text_poll_body"
        android:text="POLL TEXT"
        android:background="@drawable/rounded_rectangle_green"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/text_poll_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="Read "
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/text_message_time"
        app:layout_constraintRight_toLeftOf="@id/text_poll_body" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@id/text_poll_body"
        app:layout_constraintRight_toLeftOf="@id/text_poll_body" />

    <TextView
        android:id="@+id/text_message_pollID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="poll id"
        app:layout_constraintBottom_toTopOf="@id/text_poll_read"
        app:layout_constraintRight_toLeftOf="@id/text_poll_body" />
    />

    <Button
        android:id="@+id/text_poll_redirect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="poll"
        app:layout_constraintBottom_toTopOf="@id/text_message_pollID"
        app:layout_constraintRight_toLeftOf="@id/text_poll_body" />
    />
</android.support.constraint.ConstraintLayout>