<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:id="@+id/text_poll_redirect"
    >


    <android.support.constraint.ConstraintLayout
        android:id="@+id/poll_body"
        android:background="@drawable/rounded_rectangle_green"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:paddingTop="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:clickable="true">

        <TextView
            android:id="@+id/question"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="QUESTION"
            android:paddingBottom="10dp" />

        <View
            android:id="@+id/divider"
            style="@style/pollMessageDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/question" />

        <TextView
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEE DETAILS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:paddingBottom="8dp"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/poll_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintRight_toLeftOf="@id/poll_body"
        app:layout_constraintBottom_toBottomOf="@id/poll_body"
        />

    <TextView
        android:id="@+id/poll_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POLL ID"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/poll_body"
        app:layout_constraintBottom_toTopOf="@id/poll_message_time" />
        />

    <TextView
        android:id="@+id/poll_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/poll_body"
        app:layout_constraintBottom_toTopOf="@id/poll_message_time" />
    />
    />
</android.support.constraint.ConstraintLayout>