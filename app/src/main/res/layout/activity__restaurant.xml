<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.and
    roid.com/apk/res-auto"
        xmlns:app1="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/image"
            android:src="@drawable/ic_add"
            app1:layout_constraintDimensionRatio="H, 3:2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Title"
            android:textSize="25sp"
            android:textStyle="bold"
            app1:layout_constraintEnd_toEndOf="parent"
            app1:layout_constraintHorizontal_bias="0.075"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toBottomOf="@+id/image" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="58dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/ic_add"
            app1:layout_constraintEnd_toEndOf="parent"
            app1:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="348dp"
            android:src="@drawable/ic_location"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="348dp"
            android:text="Address"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
