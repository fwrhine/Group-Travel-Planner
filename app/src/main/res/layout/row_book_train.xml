<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/trainLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/trainData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airline Name"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/departData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainData">

            <TextView
                android:id="@+id/departCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depart City"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/departTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depart Time"
                android:layout_below="@id/departCity"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" -> "
            android:layout_toEndOf="@id/departData"
            android:layout_below="@id/trainData"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/arriveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainData"
            android:layout_toEndOf="@id/arrow" >

            <TextView
                android:id="@+id/arriveCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrive City"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/arriveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrive Time"
                android:layout_below="@id/arriveCity"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/priceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/trainLayout"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="Price"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>