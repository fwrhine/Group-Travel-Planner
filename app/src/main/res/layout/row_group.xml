<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/group_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>




            <ImageView
                android:id="@+id/user_image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/group_image"
                android:layout_below="@id/group_image"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/user_image2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/user_image1"
                android:layout_below="@id/group_image"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/user_image3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/user_image2"
                android:layout_below="@id/group_image"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/user_image4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/user_image3"
                android:layout_below="@id/group_image"
                android:scaleType="centerCrop"/>

            <!--            <Button
                            android:id="@+id/number_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_toRightOf="@id/user_image4"
                            android:layout_below="@id/group_image"/>-->

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_image2"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
