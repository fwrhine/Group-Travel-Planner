<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!--TODO maybe add image too-->
            <TextView
                android:id="@+id/plan_name"
                android:text="New Plan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/plan_date"
                android:layout_below="@id/plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, 1 Oct - Mon, 8 Oct (7 days trip)"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/plan_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plan_date"
                android:layout_marginLeft="20dp"
                android:text="@string/plan_overview_sample"/>

            <View
                android:id="@+id/plan_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/plan_overview"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/plan_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plan_separator"
                android:text="Modified: Sep 29, 2018 / Created: Sep 29, 2018"
                android:textSize="9sp"/>

            <ImageButton
                android:id="@+id/plan_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:background="?android:attr/selectableItemBackground"
                android:textAppearance="?android:textAppearanceLarge" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
