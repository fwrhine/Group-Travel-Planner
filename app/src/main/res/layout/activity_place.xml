<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:app1="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app1:layout_constraintDimensionRatio="H, 3:2"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/image" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/header"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="30dp"
            app1:layout_constraintEnd_toEndOf="parent"
            app1:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="#3B5249">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingEnd="50dp"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold"
                app1:layout_constraintHorizontal_bias="0.0"
                app1:layout_constraintStart_toStartOf="parent" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:theme="@style/RatingBar"
                app1:layout_constraintStart_toStartOf="parent"
                app1:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/rating_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="5dp"
                app1:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toRightOf="@+id/rating" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/header"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/hotel_price"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/event_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_date_range_black"
                android:drawablePadding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="date"/>

            <!--<ImageView-->
                <!--android:id="@+id/event_detail_icon"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignEnd="@+id/event_detail_date"-->
                <!--android:src="@drawable/ic_event_note_black"/>-->

            <TextView
                android:id="@+id/event_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="5dp"
                android:layout_below="@id/event_detail_date"
                android:text="TIME"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/edit_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:foregroundGravity="center"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <TextView
                android:id="@+id/event_detail_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_detail_time"
                android:paddingLeft="30dp"
                android:text="duration"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/desc_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_detail_duration"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_description"/>

            <TextView
                android:id="@+id/event_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_detail_duration"
                android:layout_toEndOf="@id/desc_icon"
                android:layout_marginTop="5dp"
                android:paddingEnd="25dp"
                android:paddingStart="5dp"
                android:text="description"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_add"
            android:id="@+id/ic_add"
            android:tint="@color/colorWhite"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline" />

        <ProgressBar
            android:id="@+id/main_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app1:layout_constraintStart_toStartOf="parent"
            app1:layout_constraintEnd_toEndOf="parent"
            app1:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminateTint="@color/darkgrey"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="30dp"
            app1:layout_constraintEnd_toEndOf="parent"
            app1:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_layout">

            <!--<ImageView-->
                <!--android:id="@+id/ic_location"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="29dp"-->
                <!--android:src="@drawable/ic_location"-->
                <!--app1:layout_constraintStart_toStartOf="parent"-->
                <!--app1:layout_constraintTop_toTopOf="@+id/address"-->
                <!--tools:layout_editor_absoluteY="87dp" />-->

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="5dp"
                android:background="@drawable/label_bg"
                android:paddingRight="30dp"
                app1:layout_constraintStart_toEndOf="@+id/ic_location" />

            <!--<ImageView-->
                <!--android:id="@+id/ic_website"-->
                <!--android:layout_width="23dp"-->
                <!--android:layout_height="23dp"-->
                <!--android:layout_marginStart="4dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:src="@drawable/ic_website"-->
                <!--app1:layout_constraintStart_toStartOf="parent"-->
                <!--app1:layout_constraintTop_toBottomOf="@+id/address" />-->

            <TextView
                android:id="@+id/website"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:drawableLeft="@drawable/ic_website"
                android:drawablePadding="5dp"
                android:autoLink="web"
                android:background="@drawable/label_bg"
                android:paddingRight="30dp"
                app1:layout_constraintTop_toBottomOf="@+id/address" />

            <!--<ImageView-->
                <!--android:id="@+id/ic_phone"-->
                <!--android:layout_width="22dp"-->
                <!--android:layout_height="22dp"-->
                <!--android:layout_marginStart="4dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:src="@drawable/ic_phone"-->
                <!--app1:layout_constraintStart_toStartOf="parent"-->
                <!--app1:layout_constraintTop_toBottomOf="@+id/website" />-->

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:autoLink="phone"
                android:background="@drawable/label_bg"
                app1:layout_constraintTop_toBottomOf="@+id/website" />

            <!--<ImageView-->
                <!--android:id="@+id/ic_time"-->
                <!--android:layout_width="22dp"-->
                <!--android:layout_height="22dp"-->
                <!--android:layout_marginStart="4dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:src="@drawable/ic_time"-->
                <!--app1:layout_constraintStart_toStartOf="parent"-->
                <!--app1:layout_constraintTop_toBottomOf="@+id/phone" />-->

            <TextView
                android:id="@+id/open_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                app1:layout_constraintTop_toBottomOf="@+id/phone" />

            <TextView
                android:id="@+id/open_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                app1:layout_constraintTop_toBottomOf="@+id/open_now" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/hotel_detail"
                app:layout_constraintTop_toBottomOf="@id/open_hours">

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/hotel_desc" />-->

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/hotel_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:animation_duration="750"/>

                <Button
                    android:id="@+id/button_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/hotel_desc"
                    android:textAllCaps="false"
                    android:background="@color/fui_transparent"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list1"
                    app:layout_constraintTop_toBottomOf="@id/button_toggle"
                    android:layout_marginTop="20dp"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list2"
                    app:layout_constraintLeft_toRightOf="@+id/list1"
                    app:layout_constraintTop_toBottomOf="@id/button_toggle"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/CustomActionBar"/>

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/google_button"-->
        <!--android:layout_marginTop="40dp"-->
        <!--app1:layout_constraintEnd_toEndOf="parent"-->
        <!--app1:layout_constraintStart_toStartOf="parent"-->
        <!--android:text="Open in Google"-->
        <!--android:drawableRight="@drawable/ic_google"-->
        <!--android:drawablePadding="5dp"-->
        <!--app1:layout_constraintTop_toBottomOf="@+id/constraintLayout" />-->

    </android.support.constraint.ConstraintLayout>
</ScrollView>
